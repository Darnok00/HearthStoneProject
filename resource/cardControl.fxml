<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<StackPane  prefHeight="200.0" prefWidth="125.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="engine.CardControl">
    <children>
        <ImageView fx:id="placeOnCard" fitHeight="197.0" fitWidth="148.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@jp-ygo-series-2-devamped-blanks-empty-yu-gi-oh-game-card-png-clipart.jpg" />
            </image>
        </ImageView>
        <ImageView fx:id="backCard" fitHeight="200.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" visible="false">
            <image>
                <Image url="@HallowsEnd.jpg" />
            </image>
        </ImageView>
        <Pane fx:id="card" prefHeight="200.0" prefWidth="124.0" style="-fx-background-color: silver;" visible="false">
            <children>
                <Label fx:id="nameCard" layoutX="22.0" layoutY="14.0" prefHeight="17.0" prefWidth="83.0" text="CARD NAME" textFill="#28ff12" />
                <Label fx:id="attack" layoutX="4.0" layoutY="34.0" prefHeight="17.0" prefWidth="30.0" text="AT" textFill="#c96218" />
                <Label fx:id="toughness" layoutX="97.0" layoutY="35.0" prefHeight="17.0" prefWidth="41.0" text="TS" textFill="#b22408" />
                <Button onAction="#summon" layoutX="21.0" layoutY="160.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="83.0" text="SUMMON "/>
                <Label fx:id="manaCost" layoutX="53.0" layoutY="43.0" text="MC" textFill="#0a85dd" />
                <Label fx:id="defender" layoutX="15.0" layoutY="83.0" prefHeight="17.0" prefWidth="90.0" text="DEFENDER" textAlignment="CENTER" textFill="#1a7948" />
                <Label fx:id="lifelink" layoutX="15.0" layoutY="100.0" prefHeight="17.0" prefWidth="90.0" text="LIFELINK " textAlignment="CENTER" textFill="#dd02ae" />
                <Label fx:id="taunt" layoutX="15.0" layoutY="116.0" prefHeight="17.0" prefWidth="90.0" text="TAUNT" textFill="RED" />
                <Label fx:id="untouchable" layoutX="15.0" layoutY="133.0" prefHeight="17.0" prefWidth="101.0" text="UNTOUCHABLE" textFill="#fff9f9" />
                <Label fx:id="deathtouch" layoutX="15.0" layoutY="66.0" prefHeight="17.0" prefWidth="90.0" text="DEATHTOUCH" />
            </children>
        </Pane>
    </children>
</StackPane>
