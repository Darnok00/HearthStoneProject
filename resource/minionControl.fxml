<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="200.0" prefWidth="135.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="engine.MinionControl">
    <children>
        <Pane fx:id="minion" prefHeight="200.0" prefWidth="124.0" style="-fx-background-color: silver;">
            <children>
                <Label fx:id="nameMinion" layoutX="22.0" layoutY="4.0" prefHeight="17.0" prefWidth="83.0" text="MINION NAME" textFill="#28ff12" />
                <Label fx:id="attack" layoutX="4.0" layoutY="24.0" prefHeight="17.0" prefWidth="30.0" text="AT" textFill="#c96218" />
                <Label fx:id="life" layoutX="108.0" layoutY="18.0" prefHeight="27.0" prefWidth="30.0" text="L" textFill="#b22408" />
                <Button fx:id="attackButton" onAction="#attackMinion" layoutX="13.0" layoutY="115.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="101.0" text="ATTACK" />
                <Label fx:id="defender" layoutX="15.0" layoutY="49.0" prefHeight="27.0" prefWidth="90.0" text="DEFENDER" textAlignment="CENTER" textFill="#1a7948" />
                <Label fx:id="lifelink" layoutX="15.0" layoutY="59.0" prefHeight="34.0" prefWidth="90.0" text="LIFELINK " textAlignment="CENTER" textFill="#dd02ae" />
                <Label fx:id="taunt" layoutX="15.0" layoutY="67.0" prefHeight="48.0" prefWidth="90.0" text="TAUNT" textFill="RED" />
                <Label fx:id="untouchable" layoutX="15.0" layoutY="89.0" prefHeight="34.0" prefWidth="101.0" text="UNTOUCHABLE" textFill="#fff9f9" />
                <Label fx:id="deathtouch" layoutX="15.0" layoutY="40.0" prefHeight="17.0" prefWidth="90.0" text="DEATHTOUCH" />
                <Button fx:id="targetButton" onAction="#chooseTargetMinion" layoutX="13.0" layoutY="158.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="101.0" text="TARGET" />
            </children>
        </Pane>
        <Pane fx:id="emptyField" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: yellow;" />
    </children>
</StackPane>
