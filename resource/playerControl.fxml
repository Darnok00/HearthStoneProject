<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="200.0" prefWidth="125.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="engine.PlayerControl">
    <children>
        <Pane fx:id="player" prefHeight="200.0" prefWidth="125.0" style="-fx-background-color: silver;">
            <children>
                <Label fx:id="playerName" layoutX="33.0" layoutY="14.0" prefHeight="17.0" prefWidth="72.0" text="PLAYER 1" textFill="#28ff12" />
                <Label fx:id="life" layoutX="46.0" layoutY="44.0" prefHeight="17.0" prefWidth="30.0" text="LIFE" textFill="#c31313" />
                <Label fx:id="manaCristal" layoutX="40.0" layoutY="69.0" prefHeight="17.0" prefWidth="41.0" text="MANA" textFill="#1d4cb9" />
                <Button fx:id="endTurnButton" onAction="#endTurn" layoutX="2.0" layoutY="165.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="118.0" text="END TURN" />
            <Button fx:id="targetButton" onAction="#targetPlayer" layoutX="7.0" layoutY="127.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="109.0" text="TARGET" />
            </children>
        </Pane>
    </children>
</StackPane>
